@model SocialNetworkOnSharp.ViewsModel.RegisterModel
@{
    Layout = "_AccountLayout";
}
<h2>Регистрация</h2>

<a asp-action="Login" asp-controller="Account">Авторизация</a>

<div class="container-fluid col-6 col-md-4 d-flex justify-content-center align-items-start">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group mb-3 mt-3">
                @Html.LabelFor(rm => rm.Login, "Логин")
                @Html.TextBoxFor(rm => rm.Login)
                @Html.ValidationMessageFor(rm => rm.Login)
            </div>
            <div class="form-group mb-3 mt-3">
                @Html.LabelFor(rm => rm.NickName, "Ник")
                @Html.TextBoxFor(rm => rm.NickName)
                @Html.ValidationMessageFor(rm => rm.NickName)
            </div>
            <div class="form-group mb-3 mt-3">
                @Html.LabelFor(rm => rm.Password, "Пароль")
                @Html.PasswordFor(rm => rm.Password)
                @Html.ValidationMessageFor(rm => rm.Password)
            </div>
            <div class="form-group mb-3 mt-3">
                @Html.LabelFor(rm => rm.ConfirmPassword, "Повторите Пароль")
                @Html.PasswordFor(rm => rm.ConfirmPassword)
                @Html.ValidationMessageFor(rm => rm.ConfirmPassword)
            </div>
            <div class="form-group mb-3 mt-3">
                <input type="submit" value="Регистрация" class="btn btn-primary" />
            </div>
        </div>
    }
</div>